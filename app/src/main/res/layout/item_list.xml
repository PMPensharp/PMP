<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearlayout"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <View
                android:id="@+id/view"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="7dp"

                android:background="#00C2FF"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/iv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"
                    android:text="dd  "
                    android:textSize="30dp" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:src="@drawable/rectangular"
                    android:layout_marginBottom="1dp"

                    >

                <LinearLayout
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <View
                    android:id="@+id/viewRest"
                    android:layout_width="50dp"
                    android:layout_height="30dp"

                    android:background="#ADADAD" />

                    <View
                        android:id="@+id/viewPower"
                        android:layout_width="50dp"
                        android:layout_height="30dp"

                        android:background="#00C2FF"/>


                </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hiddenlayout"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backimage"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bluefield"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wind"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/pung"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="7dp">
                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="풍속"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10m/s"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="풍향"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남동풍"
                            android:textSize="20dp"/>


                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#B9B9B9"/>
                    <ImageView
                        android:id="@+id/clean"
                        android:layout_width="74dp"
                        android:layout_height="70dp"
                        android:src="@drawable/clean"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맑음"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="27dp"/>
                </LinearLayout>
            </FrameLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/picChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/hiddenlayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/picChart2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>